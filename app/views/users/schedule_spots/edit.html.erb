<turbo-frame id="schedule-spot-modal">
  <div class="relative z-20 w-full max-w-2xl max-h-screen overflow-y-auto bg-main-bg rounded-md">
    <main class="flex flex-col justify-center px-8 py-12 bg-main-bg">
      <div class="flex items-center gap-2 mb-8">
        <h1 class="text-xl font-bold text-text"><%= t('schedule_spots.edit.title') %></h1>
      </div>

      <div class="w-full max-w-md">
        <%= form_with model: [@schedule, @schedule_spot], local: true do |f| %>
          <div class="mb-4">
            <%= f.label :snapshot_name, class: "block text-sm font-medium text-text mb-2" do %>
              <%= t('schedule_spots.form.spot_name') %>
              <span class="text-red-600 font-bold ml-1">*</span>
            <% end %>
            <%= f.text_field :snapshot_name, class: "form-text-field w-full", placeholder: t('schedule_spots.form.spot_name') %>
            <% if @schedule_spot.errors.any? %>
              <div class="ml-2">
                <% @schedule_spot.errors.messages[:snapshot_name].each do |message| %>
                  <p class="text-red-600 text-xs"><%= t('schedule_spots.form.spot_name') %><%= message %></p>
                <% end %>
              </div>
            <% end %>
          </div>

          <div class="mb-4">
            <%= f.label :snapshot_category_id, class: "block text-sm font-medium text-text mb-2" do %>
              <%= t('schedule_spots.form.category') %>
              <span class="text-red-600 font-bold ml-1">*</span>
            <% end %>
            <%= f.select :snapshot_category_id, options_from_collection_for_select(Category.all, :id, :name, @schedule_spot.snapshot_category_id), { include_blank: t('schedule_spots.category_placeholder') }, class: "form-text-field w-full" %>
            <% if @schedule_spot.errors.any? %>
              <div class="ml-2">
                <% @schedule_spot.errors.messages[:snapshot_category_id].each do |message| %>
                  <p class="text-red-600 text-xs"><%= t('schedule_spots.form.category') %><%= message %></p>
                <% end %>
              </div>
            <% end %>
          </div>

          <div class="mb-4">
            <%= f.label :snapshot_address, t('schedule_spots.form.address'), class: "block text-sm font-medium text-text mb-2" %>
            <%= f.text_field :snapshot_address, class: "form-text-field w-full", placeholder: t('schedule_spots.form.address') %>
          </div>

          <div class="mb-4">
            <%= f.label :snapshot_website_url, t('schedule_spots.form.website_url'), class: "block text-sm font-medium text-text mb-2" %>
            <%= f.url_field :snapshot_website_url, class: "form-text-field w-full", placeholder: t('schedule_spots.form.website_url') %>
          </div>

          <div class="mb-4">
            <%= f.label :snapshot_phone_number, t('schedule_spots.form.phone_number'), class: "block text-sm font-medium text-text mb-2" %>
            <%= f.telephone_field :snapshot_phone_number, class: "form-text-field w-full", placeholder: t('schedule_spots.form.phone_number') %>
          </div>

          <div class="mb-4">
            <%= f.label :day_number, "日程", class: "block text-sm font-medium text-text mb-2" %>
            <%= f.select :day_number, (1..@schedule.days).map { |d|
              formatted_date = @schedule.formatted_date_for_day(d)
              label = formatted_date.present? ? "#{formatted_date}（#{d}日目）" : "#{d}日目"
              [label, d]
            }, {}, class: "form-text-field w-full" %>
          </div>

          <div class="flex gap-4">
            <div class="flex-1">
              <%= f.label :start_time, t('schedule_spots.edit.arrival_time'), class: "block text-sm font-medium text-text mb-2" %>
              <%= f.time_field :start_time, class: "form-text-field w-full" %>
            </div>

            <div class="flex-1">
              <%= f.label :end_time, t('schedule_spots.edit.departure_time'), class: "block text-sm font-medium text-text mb-2" %>
              <%= f.time_field :end_time, class: "form-text-field w-full" %>
            </div>
          </div>
          <% if @schedule_spot.errors.any? %>
            <div class="ml-2">
              <% @schedule_spot.errors.messages[:end_time].each do |message| %>
                <p class="text-red-600 text-xs"><%= t('schedule_spots.edit.departure_time') %><%= message %></p>
              <% end %>
            </div>
          <% end %>

          <div class="my-4">
            <%= f.label :memo, t('schedule_spots.form.memo'), class: "block text-sm font-medium text-text mb-2" %>
            <%= f.text_area :memo, class: "form-text-field w-full resize-none min-h-[100px]", placeholder: t('schedule_spots.form.memo') %>
          </div>

          <div class="flex gap-3 mt-8">
            <%= f.submit t('schedule_spots.form.update'), class: "btn-main flex-1 text-center" %>
            <%= link_to t('schedule_spots.form.cancel'), schedule_schedule_spot_path(@schedule, @schedule_spot), class: "btn-sub flex-1 text-center" %>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</turbo-frame>

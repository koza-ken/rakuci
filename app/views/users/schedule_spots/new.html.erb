<turbo-frame id="<%= @schedule.present? ? 'spot-create-modal' : 'add_new_schedule_spot' %>">
  <%# モーダルのラッパー %>
  <div role="dialog" tabindex="-1" class="fixed inset-0 z-60 flex items-center justify-center w-full p-2">
    <%# 背景（クリックでモーダルを閉じる） %>
    <div data-action="click->modal#close" class="fixed inset-0 block w-full cursor-pointer bg-gray-900/30">
    </div>
    <div class="relative z-20 max-w-md md:max-w-2xl max-h-[90vh] overflow-y-auto bg-main-bg rounded-md">
      <% if @schedule.present? %>
        <%= render 'add_spot_from_schedule' %>
      <% else %>
        <%= render 'add_spots_from_card' %>
      <% end %>
    </div>
  </div>
</turbo-frame>

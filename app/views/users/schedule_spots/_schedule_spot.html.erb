<div class="flex gap-3 items-stretch mb-2">
  <%# ドラッグハンドル %>
  <div class="drag-handle flex items-center justify-center w-8 text-gray-400 cursor-grab active:cursor-grabbing">
    <span class="text-2xl leading-none">⋮⋮</span>
  </div>

  <%# スポット情報 %>
  <%= link_to schedule_schedule_spot_path(schedule_spot.schedule, schedule_spot), class: "flex-1" do %>
    <div class="bg-white rounded-lg shadow p-2 border-l-4 border-secondary">
      <%# 時間帯 %>
      <% if schedule_spot.start_time.present? || schedule_spot.end_time.present? %>
        <p class="text-sm text-text-light">
          <% if schedule_spot.start_time.present? && schedule_spot.end_time.present? %>
            <%= schedule_spot.start_time.strftime("%H:%M") %> ~ <%= schedule_spot.end_time.strftime("%H:%M") %>
          <% elsif schedule_spot.start_time.present? %>
            <%= schedule_spot.start_time.strftime("%H:%M") %>から
          <% elsif schedule_spot.end_time.present? %>
            <%= schedule_spot.end_time.strftime("%H:%M") %>まで
          <% end %>
        </p>
      <% end %>
      <%# スポット名 %>
      <h3 class="text-lg font-bold text-text-light"><%= schedule_spot.display_name %></h3>
    </div>
  <% end %>
</div>

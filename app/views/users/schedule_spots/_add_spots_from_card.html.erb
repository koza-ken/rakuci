<%# カードからスポット選択してしおり選択 %>
<main class="flex flex-col items-center px-12 py-10 h-[90vh]">
  <div class="w-full max-w-2xl">
    <h1 class="text-xl font-bold text-text mb-2">しおりを選択</h1>
    <p class="text-sm text-text-light mb-6">※グループのしおりには追加できません</p>
  </div>

  <%# 追加するスポット情報 %>
  <div class="w-full max-w-2xl mb-6">
    <div class="bg-gray-100 rounded-lg p-4">
      <% if @spot_ids.present? %>
        <%# 複数スポット %>
        <p class="text-sm font-bold"><%= @spots.size %>件のスポットを追加します</p>
        <div class="mt-2 max-h-24 overflow-y-auto">
          <% @spots.each do |spot| %>
            <p class="text-sm text-gray-700">• <%= spot.name %></p>
          <% end %>
        </div>
      <% else %>
        <%# 単一スポット %>
        <h2 class="text-xl font-bold text-text"><%= @spot.name %></h2>
        <p class="text-sm text-text-light"><%= @spot.category&.name %></p>
      <% end %>
    </div>
  </div>

  <%# しおり一覧 %>
  <div class="w-full max-w-xl md:max-w-2xl lg:max-w-4xl flex-1 overflow-y-auto">
    <% if @schedules.any? %>
      <div class="space-y-4">
        <% @schedules.each do |schedule| %>
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex flex-col md:flex-row md:items-start md:gap-4">
              <%# 左側: しおり名 + 旅行日程 %>
              <div class="flex-1 mb-4 md:mb-0">
                <h3 class="text-xl font-bold text-text mb-2"><%= schedule.name %></h3>
                <% if schedule.start_date.present? && schedule.end_date.present? %>
                  <p class="text-text-light">
                    <%= schedule.start_date %> ~ <%= schedule.end_date %>
                  </p>
                <% end %>
              </div>

              <%# 右側: 追加ボタン %>
              <div class="w-full md:w-auto md:shrink-0">
                <% if @spot_ids.present? %>
                  <%# 複数スポット用フォーム %>
                  <%= form_with url: card_schedule_spots_path(@card, schedule_id: schedule.id), method: :post, data: { turbo: false } do |f| %>
                    <% @spot_ids.each do |spot_id| %>
                      <%= f.hidden_field :spot_ids, multiple: true, value: spot_id %>
                    <% end %>
                    <%= f.submit "このしおりに追加", class: "btn-main w-full md:w-auto" %>
                  <% end %>
                <% else %>
                  <%# 単一スポット用ボタン %>
                  <%= button_to "このしおりに追加",
                      card_spot_schedule_spots_path(@card, @spot, schedule_id: schedule.id),
                      method: :post,
                      form: { data: { turbo: false } },
                      class: "btn-main w-full md:w-auto" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center">まだしおりがありません</p>
    <% end %>
  </div>

  <%# 戻る %>
  <div class="w-full mt-6">
    <% if @spot_ids.present? %>
      <%= link_to t('cards.back'), card_path(@card), data: { turbo_frame: "_top" }, class: "btn-sub lg:w-1/2 mx-auto block text-center" %>
    <% else %>
      <%= link_to t('cards.back'), user_spot_path(@spot), data: { turbo_frame: "_top" }, class: "btn-sub lg:w-1/2 mx-auto block text-center" %>
    <% end %>
  </div>
</main>

<%# しおり詳細から直接スポット追加 %>
<main class="flex flex-col items-center justify-center px-8 py-12">
  <div class="w-full max-w-md">
    <h1 class="text-xl font-bold text-text mb-8"><%= t('spots.new.title') %></h1>
  </div>

  <%= form_with model: @schedule_spot, url: schedule_schedule_spots_path(@schedule), class: "w-full max-w-md", data: { controller: "autocomplete" } do |f| %>
    <%# スポット名 %>
    <div class="mb-6">
      <%= f.label :snapshot_name, class: "block text-sm font-medium text-text mb-2" do %>
        <%= t('spots.form.name') %>
        <span class="text-red-600 font-bold ml-1">*</span>
      <% end %>
      <%= f.text_field :snapshot_name,
          data: { autocomplete_target: "nameField" },
          placeholder: t('spots.form.name_placeholder'),
          class: "form-text-field" %>
      <% if @schedule_spot.errors.any? %>
        <div class="ml-2">
          <% @schedule_spot.errors.messages[:snapshot_name].each do |message| %>
            <p class="text-red-600 text-xs"><%= t('schedule_spots.form.spot_name') %><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <%# オートコンプリートは補助として表示 %>
      <div class="mt-2 text-xs text-gray-600">
        または下から施設を検索して選択：
      </div>
      <gmp-place-autocomplete
        id="spot-auto-input"
        data-autocomplete-target="autocomplete"
        country="jp"
        class="form-text-field p-0 mt-1">
      </gmp-place-autocomplete>

      <%# 自動入力失敗時のエラーメッセージ %>
      <div id="autocomplete-error" class="hidden mt-2 p-2 bg-yellow-50 border border-yellow-200 rounded text-sm text-yellow-700" data-autocomplete-target="errorMessage">
        施設情報の自動入力に失敗しました。下記のフィールドに手動で入力してください。
      </div>
    </div>

    <%# カテゴリ %>
    <div class="mb-6">
      <%= f.label :snapshot_category_id, class: "block text-sm font-medium text-text mb-2" do %>
        <%= t('spots.form.category') %>
      <% end %>
      <%= f.collection_select :snapshot_category_id, @categories, :id, :name,
          {include_blank: "--- 選択してください ---"},
          {class: "form-text-field"} %>
      <% if @schedule_spot.errors.any? %>
        <div class="ml-2">
          <% @schedule_spot.errors.messages[:snapshot_category_id].each do |message| %>
            <p class="text-red-600 text-xs"><%= t('schedule_spots.form.category') %><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# 住所 %>
    <div class="mb-6">
      <%= f.label :snapshot_address, t('spots.form.address'), class: "block text-sm font-medium text-text mb-2" %>
      <%= f.text_field :snapshot_address,
          data: { autocomplete_target: "addressField" },
          placeholder: t('spots.form.address_placeholder'),
          class: "form-text-field resize-vertical" %>
    </div>

    <%# URL %>
    <div class="mb-6">
      <%= f.label :snapshot_website_url, t('spots.form.website_url'), class: "block text-sm font-medium text-text mb-2" %>
      <%= f.text_field :snapshot_website_url,
          data: { autocomplete_target: "websiteField" },
          placeholder: t('spots.form.web_site_url_placeholder'),
          class: "form-text-field resize-vertical" %>
    </div>

    <%# 電話番号 %>
    <div class="mb-6">
      <%= f.label :snapshot_phone_number, t('spots.form.phone_number'), class: "block text-sm font-medium text-text mb-2" %>
      <%= f.text_field :snapshot_phone_number,
          data: { autocomplete_target: "phoneField" },
          placeholder: t('spots.form.phone_number_placeholder'),
          class: "form-text-field resize-vertical" %>
    </div>

    <%# place_id %>
    <%= f.hidden_field :google_place_id, data: { autocomplete_target: "idField" } %>

    <%# ボタン %>
    <div class="flex gap-3">
      <%= f.submit t('schedule_spots.form.submit'), class: "btn-main flex-1" %>
      <%= link_to t('schedule_spots.form.cancel'), schedule_path(@schedule), class: "btn-sub flex-1 text-center" %>
    </div>
  <% end %>
</main>

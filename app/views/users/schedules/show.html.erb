<main class="flex flex-col items-center justify-center px-8 py-12">
  <div class="w-full max-w-2xl">
    <% if @schedule.present? %>
      <%# しおり名 %>
      <h1 class="text-3xl text-primary font-bold mb-4"><%= @schedule.name %></h1>

      <%# スケジュール日程 %>
      <div class="mb-2">
        <p class="text-text">
          <span class="font-semibold"><%= t('schedules.show.schedule_dates')%>：</span>
          <span class="font-semibold"><%= @schedule.start_date %></span>
          <span class="text-text">~</span>
          <span class="font-semibold"><%= @schedule.end_date %></span>
        </p>
      </div>

      <%# スポット %>
      <div class="mt-4">
        <% if @schedule.schedule_spots.any? %>
          <% @schedule.schedule_spots.order(:day_number, :global_position).group_by(&:day_number).each do |day, schedule_spots| %>
            <%# 日目の見出し %>
            <% formatted_date = @schedule.formatted_date_for_day(day) %>
            <h3 class="text-lg font-bold text-gray-700 mt-4 mb-2">
              <% if formatted_date %>
                <%= formatted_date %>（<%= day %>日目）
              <% else %>
                <%= day %>日目
              <% end %>
            </h3>
            <div class="space-y-4">
              <% schedule_spots.each do |schedule_spot| %>
                <%= render schedule_spot %>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p class="text-text"><%= t('schedules.show.no_spots') %></p>
        <% end %>
      </div>
    <% else %>
      <%# TODO i18n確認 %>
      <p class="text-text text-center mt-8"><%= t('activerecord.models.schedule') %>はまだ作成されていません</p>
    <% end %>

    <%# 操作ボタン %>
    <div class="mt-8 flex gap-3">
      <%= link_to t('cards.form.edit'), edit_schedule_path(@schedule), class: "btn-main flex-1 text-center" %>
      <%= link_to t('users.schedules.show.back'), schedules_path, class: "btn-sub flex-1 text-center" %>
    </div>

    <%# メモ %>
    <% if @schedule.memo.present? %>
      <h2 class="mt-10">メモ</h2>
      <div class="mt-2 p-4 bg-white rounded">
        <p class="text-text"><%= @schedule.memo %></p>
      </div>
    <% end %>

    <div class="mt-8">
      <%= button_to "しおりを削除", schedule_path(@schedule), method: :delete, data: { turbo: false }, onclick: "return confirm('このしおりを削除しますか？')", class: "btn-main flex-1 text-center" %>
    </div>


  </div>
</main>

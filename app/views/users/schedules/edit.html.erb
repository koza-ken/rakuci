<main class="flex flex-col items-center justify-center px-4 md:px-6 lg:px-8 py-12">
  <div class="w-full max-w-2xl md:max-w-3xl lg:max-w-4xl">
    <h1 class="text-xl lg:text-2xl text-text font-bold mb-8"><%= t('users.schedules.edit.title') %></h1>

    <%= form_with model: @schedule, local: true, scope: :schedule do |f| %>
      <div class="mb-6">
        <%= f.label :name, class: "block text-sm lg:text-base font-bold text-text mb-2" do %>
          <%= t('activerecord.attributes.schedule.name') %>
          <span class="text-red-600 font-bold ml-1">*</span>
        <% end %>
        <%= f.text_field :name, class: "form-text-field w-full", placeholder: t('users.schedules.form.name_placeholder') %>
        <% if @schedule.errors.any? %>
          <div class="ml-2">
            <% @schedule.errors.messages[:name].each do |message| %>
              <p class="text-red-600 text-xs lg:text-sm"><%= t('activerecord.attributes.schedule.name') %><%= message %></p>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col lg:flex-row gap-4 lg:gap-6 mb-6">
        <div class="flex-1">
          <%= f.label :start_date, class: "block text-sm lg:text-base font-bold text-text mb-2" %>
          <%= f.date_field :start_date, class: "form-text-field w-full" %>
          <% if @schedule.errors.any? %>
            <div class="ml-2">
              <% @schedule.errors.messages[:start_date]&.each do |message| %>
                <p class="text-red-600 text-xs lg:text-sm"><%= t('activerecord.attributes.schedule.start_date') %><%= message %></p>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="flex-1">
          <%= f.label :end_date, class: "block text-sm lg:text-base font-bold text-text mb-2" %>
          <%= f.date_field :end_date, class: "form-text-field w-full" %>
          <% if @schedule.errors.any? %>
            <div class="ml-2">
              <% @schedule.errors.messages[:end_date]&.each do |message| %>
                <p class="text-red-600 text-xs lg:text-sm"><%= t('activerecord.attributes.schedule.end_date') %><%= message %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mb-6 lg:mb-12">
        <%= f.label :memo, class: "block text-sm lg:text-base font-bold text-text mb-2" %>
        <%= f.text_area :memo, class: "form-text-field w-full resize-none min-h-[100px]", placeholder: "メモを入力してください" %>
      </div>

      <div class="flex gap-3 justify-center">
        <%= f.submit t('users.schedules.form.update'), class: "btn-main w-1/2 px-4 md:px-8 py-2 text-sm lg:text-base" %>
        <%= link_to t('users.schedules.form.cancel'), schedule_path(@schedule), class: "btn-sub w-1/2 px-4 md:px-8 py-2 text-sm lg:text-base text-center", data: { turbo: false } %>
      </div>
    <% end %>
  </div>
</main>

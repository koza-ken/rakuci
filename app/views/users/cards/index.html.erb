<% content_for(:title, t('cards.index_content.title')) %>
<% breadcrumb :cards %>

<%# 作成モーダルの挿入 %>
<%= turbo_frame_tag "card-create-modal", data: { controller: "modal" } %>

<main class="flex flex-col items-center justify-center px-4 py-6 mb-20" data-controller="guide">
  <div id="cards-page-title">
    <% if @cards.any? %>
      <h1 class="text-xl md:text-2xl text-text font-bold"><%= t('cards.index_content.title') %></h1>
    <% end %>
  </div>

  <div id="cards_list" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 md:gap-6 mt-8">
    <% if @cards.any? %>
      <%= render partial: "shared/cards/card", collection: @cards %>
    <% else %>
      <div id="cards_empty_state" class="col-span-2 sm:col-span-3 md:col-span-4 flex flex-col items-center justify-center py-8 mt-6 px-4">
        <div class=" max-w-xl sm:w-xl rounded-2xl border border-border/80 shadow-[0_10px_50px_rgba(0,0,0,0.05)] px-4 py-10 space-y-8 text-center animate-fade-in-up">
          <div class="mx-auto w-16 h-16 md:w-24 md:h-24 rounded-full bg-primary/20 flex items-center justify-center shadow-inner">
            <%= render IconComponent.new(name: "footer_icon_card", size: 8, breakpoints: { md: 12 }, color: "text-text-light/40") %>
          </div>
          <div class="">
            <div class="flex items-center justify-center gap-2 mb-8">
              <p class="text-lg md:text-xl text-text font-semibold leading-relaxed"><%= t('cards.index_content.lets_create_card') %></p>
              <button class="bg-secondary hover:opacity-80 transition shrink-0 w-5 h-5 rounded-full flex items-center justify-center text-white text-sm font-semibold" data-action="click->guide#toggleModal" title="<%= t('cards.index_content.guide_button') %>">
                ?
              </button>
            </div>
            <div class="px-6">
              <p class="text-sm md:text-lg text-text-light leading-relaxed mb-1"><%= t('cards.index_content.personal_card_page') %></p>
            </div>
          </div>
          <div class="space-y-3">
            <%= link_to new_card_path, data: {turbo_frame: "card-create-modal"}, class: "first-create-btn md:min-w-1/2" do %>
              <%= render IconComponent.new(name: "group_card_icon_add", size: 6, color: "text-text") %>
              <span><%= t('cards.index_content.create_card') %></span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# 右下の+ボタン（新規作成ページへのリンク） %>
  <div id="cards-fab-container">
    <% if @cards.any? %>
      <div class="fixed bottom-22 right-4 md:right-6 lg:left-[calc(50%+412px)] lg:right-auto z-50" data-controller="modal">
        <%= link_to new_card_path, data: {turbo_frame: "card-create-modal", action: "click->modal#setGroupId", modal_target: "fab"},
                    title: t('cards.index_content.create_card'),
                    class: "group bg-primary hover:opacity-80 text-text-light w-14 h-14 lg:w-18 lg:h-18 rounded-full shadow-lg hover:shadow-xl duration-300 flex items-center justify-center relative" do %>
          <%= render IconComponent.new(name: "add_card_icon", size: 8, breakpoints: { lg: 10 }, color: "text-text-light") %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# カードガイドモーダル %>
  <%= render "shared/card_guide_modal" %>
</main>

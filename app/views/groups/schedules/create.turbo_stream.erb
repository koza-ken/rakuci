<%# フラッシュメッセージを表示 %>
<%= turbo_stream.update "flash-container", partial: "shared/flash_messages", locals: { flash: flash } %>

<%# モーダルを閉じる（中身を空にする） %>
<%= turbo_stream.update "schedule-create-modal" %>

<%# グループ詳細情報を更新 %>
<%= turbo_stream.replace "group_details", partial: "groups/details", locals: { group: @group } %>

<%# しおり作成したら、しおり作成しようのメッセージを削除 %>
<%= turbo_stream.replace "schedule-create-message" do %>
  <div id="schedule-create-message"></div>
<% end %>

<%# ボタンのアイコンを更新（"しおり作成" → "しおり詳細"） %>
<%= turbo_stream.replace "schedule-button" do %>
  <%= link_to group_schedule_path(@group), class: "btn-main w-auto p-2 lg:px-4 lg:py-2 flex items-center gap-2 lg:gap-3 text-sm lg:text-base", title: t('groups.show.schedule_detail') do %>
    <div class="flex items-center justify-center">
      <%= render IconComponent.new(name: "footer_icon_schedule", size: 6, breakpoints: { lg: 8 }, color: "text-text-light") %>
    </div>
    <span class="inline"><%= t('groups.show.schedule_detail') %></span>
  <% end %>
<% end %>

<% content_for(:title, @group.name) %>
<% breadcrumb :group, @group %>

<%# 作成モーダルの挿入 %>
<%= turbo_frame_tag "card-create-modal", data: { controller: "modal" } %>
<%= turbo_frame_tag "schedule-create-modal", data: { controller: "modal" } %>

<div class="relative z-20 w-full mx-auto max-w-2xl md:max-w-3xl lg:max-w-4xl bg-main-bg rounded-md mb-10 lg:mb-16 px-3 md:px-0">
  <main class="flex flex-col px-4 md:px-6 lg:px-8 py-6 bg-main-bg" data-controller="guide">

    <%# グループ名セクション（表示/編集を切り替え） %>
    <div id="group-name-section" data-controller="card-edit" class="mb-4 lg:mb-6">
      <%# グループ名の表示 %>
      <div id="group-name-display" class="flex items-start justify-between gap-1 lg:gap-3 mb-8" data-card-edit-target="display">
        <div class="flex items-center gap-3 flex-1">
          <h2 class="text-xl lg:text-2xl font-bold text-text"><%= @group.name %></h2>
          <%# 編集アイコン %>
          <button class="shrink-0 text-text hover:opacity-70 transition" data-action="click->card-edit#toggleForm">
            <%= render IconComponent.new(name: "form_icon_edit", size: 5, breakpoints: { lg: 6 }, color: "text-text-light") %>
          </button>
        </div>
        <div class="flex gap-2 lg:gap-4 shrink-0">
          <%= render DeleteButtonComponent.new(resource: @group, scope: current_user, confirm_message: t('groups.show.delete_confirm')) %>
        </div>
      </div>

      <%# グループ名の編集フォーム（別ファイルから読み込み） %>
      <%= render "group_name_edit", group: @group %>
    </div>

    <div id="group_details">
      <%= render "schedule_details", group: @group, schedule: @schedule %>
      <%= render "group_members", group: @group %>
    </div>


    <div class="w-full max-w-2xl md:max-w-3xl lg:max-w-4xl mx-auto mt-6 md:mt-10">
      <div class="mb-4 lg:mb-6 flex justify-between items-start gap-3">
        <div class="flex-1">
          <%# 旅行先の候補 %>
          <div class="flex items-center gap-2 mb-1 lg:mb-2">
            <h2 class="text-xl lg:text-2xl font-bold text-text"><%= t('groups.show.travel_candidates') %></h2>
            <button class="bg-secondary hover:opacity-80 transition shrink-0 w-5 h-5 lg:w-6 lg:h-6 rounded-full flex items-center justify-center text-white text-sm lg:text-base font-semibold" data-action="click->guide#toggleModal" title="<%= t('cards.index_content.guide_button') %>">
              ?
            </button>
          </div>
          <%# しおり作成メッセージ %>
          <div id="schedule-create-message">
            <% unless @schedule.present? %>
              <p class="text-text-light text-xs lg:text-sm"><%= t('groups.show.schedule_create_message') %></p>
            <% end %>
          </div>
        </div>
        <%# しおりボタン（作成・詳細） %>
        <div id="schedule-button">
          <% if @schedule.present? %>
            <%# グループのしおりが作成済みなら詳細ボタン %>
            <%= link_to group_schedule_path(@group), class: "btn-main p-2 lg:px-4 lg:py-2 flex items-center gap-2 lg:gap-3 text-sm lg:text-base", title: t('groups.show.schedule_detail') do %>
              <%= render IconComponent.new(name: "footer_icon_schedule", size: 6, breakpoints: { lg: 8 }, color: "text-text-light") %>
              <span class="inline"><%= t('groups.show.schedule_detail') %></span>
            <% end %>
          <% else %>
            <%# しおりが作成されていなければ作成ボタン %>
            <%= link_to new_group_schedule_path(@group), data: { turbo_frame: "schedule-create-modal", action: "click->modal#setGroupId", modal_target: "fab" }, class: "btn-main p-2 lg:px-4 lg:py-2 flex items-center gap-2 lg:gap-3 text-sm lg:text-base", title: t('groups.show.schedule_create') do %>
              <%= render IconComponent.new(name: "add_schedule_icon", size: 6, breakpoints: { lg: 8 }, color: "text-text-light") %>
              <span class="inline"><%= t('groups.show.schedule_create') %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <%# カード表示 %>
      <div id="group_cards_list" class="w-full grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mb-4 lg:mb-6">
        <% @group.cards.each do |card| %>
          <%= render "shared/cards/card", card: card %>
        <% end %>
      </div>

      <div class="card-index border-dashed text-center mt-2" data-controller="modal">
        <div class="flex items-center justify-center gap-2 <%= 'mb-2 lg:mb-3' unless @group.cards.present? %>">
          <%= link_to new_group_card_path(@group), data: {turbo_frame: "card-create-modal", action: "click->modal#setGroupId"}, class: "flex items-center justify-center gap-2" do %>
            <%= render IconComponent.new(name: "group_card_icon_add", size: 6, color: "text-text") %>
            <p class="text-sm lg:text-base">
              <%= t('groups.show.add_card') %>
            </p>
          <% end %>
        </div>
      </div>
    </div>

    <%# カードガイドモーダル %>
    <%= render "shared/card_guide_modal" %>
  </main>
</div>

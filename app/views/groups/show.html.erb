<% content_for(:title, @group.name) %>
<% breadcrumb :group, @group %>

<%# 作成モーダルの挿入 %>
<%= turbo_frame_tag "card-create-modal", data: { controller: "modal" } %>
<%= turbo_frame_tag "schedule-create-modal", data: { controller: "modal" } %>

<div class="min-h-screen bg-main-bg">
  <main class="flex flex-col items-center justify-center px-8 py-6">
    <div class="w-full max-w-md mb-6">
      <%# グループ名セクション（表示/編集を切り替え） %>
      <div id="group-name-section" data-controller="card-edit" class="mb-4">
        <%# 表示モード %>
        <div id="group-name-display" class="flex items-start gap-3 mb-4" data-card-edit-target="display">
          <h2 class="text-xl font-bold text-text"><%= @group.name %></h2>
          <%# 編集アイコン（サイズ固定） %>
          <button class="shrink-0 text-text hover:opacity-70 transition pt-1" data-action="click->card-edit#toggleForm">
            <%= render "shared/icon/form_icon_edit" %>
          </button>
        </div>

        <%# 編集モード（非表示） %>
        <div id="group-name-form" class="hidden mb-4" data-card-edit-target="form">
          <%= form_with model: @group, local: true do |f| %>
            <div class="flex items-center gap-2">
              <%= f.text_field :name, class: "form-text-field flex-1" %>
              <%= f.submit t('groups.form.update'), class: "btn-main px-4 py-2 w-auto" %>
              <button type="button" class="btn-sub w-auto px-2 py-1" data-action="click->card-edit#toggleForm">
                <p class="text-2xl">×</p>
              </button>
            </div>
            <%# バリデーションエラー表示 %>
            <% if @group.errors.any? %>
              <div class="mt-2">
                <% @group.errors.messages[:name].each do |message| %>
                  <p class="text-red-600 text-xs"><%= t('activerecord.attributes.group.name') %><%= message %></p>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <%# 招待ボタン %>
      <div class="flex item-center justify-end mb-8">
        <button
          data-controller="clipboard"
          data-clipboard-text-value="<%= new_membership_url(@group.invite_token) %>"
          data-action="click->clipboard#copy"
          title="<%= t('groups.show.invite_button') %>"
          class="btn-main w-auto p-2">
          <div class="flex items-center justify-center size-8 text-text-light">
            <%= render "shared/icon/add_membership_icon" %>
          </div>
        </button>
      </div>

      <div id="group_details">
        <%= render "groups/details", group: @group %>
      </div>

    </div>

    <div class="w-full max-w-md">
      <div class="mb-4 flex justify-between items-start gap-3">
        <div class="flex-1">
          <h2 class="text-xl font-bold text-text mb-1"><%= t('groups.show.travel_candidates') %></h2>
          <%# しおり作成メッセージ %>
          <div id="schedule-create-message">
            <% if @group.schedule.blank? %>
              <p class="text-text-light text-xs"><%= t('groups.show.schedule_create_message') %></p>
            <% end %>
          </div>
        </div>
        <div id="schedule-button" class="">
          <% if @group.schedule.present? %>
            <%# グループにしおりがあればしおり詳細に遷移 %>
            <%= link_to group_schedule_path(@group), class: "btn-main w-auto p-2 inline-flex items-center justify-center", title: t('groups.show.schedule_detail') do %>
              <div class="size-8">
                <%= render "shared/icon/footer_icon_schedule", icon_class: "text-text-light" %>
              </div>
            <% end %>
          <% else %>
            <%= link_to new_group_schedule_path(@group), data: { turbo_frame: "schedule-create-modal", action: "click->modal#setGroupId", modal_target: "fab" }, class: "btn-main w-auto p-2 inline-flex items-center justify-center", title: t('groups.show.schedule_create') do %>
              <div class="size-8">
                <%= render "shared/icon/add_schedule_icon" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div>
        <div id="group_cards_list" class="w-full grid grid-cols-2 gap-4 mb-4">
          <% @group.cards.each do |card| %>
            <%= render "cards/card", card: card %>
          <% end %>
        </div>
        <div id="group-create-button" class="card-index border-dashed text-center mt-2" data-controller="modal">
          <% if @group.cards.empty? %>
            <div class="py-2">
              <div class="flex items-center justify-center gap-2 mb-2">
                <%= link_to new_group_card_path(@group), data: {turbo_frame: "card-create-modal", action: "click->modal#setGroupId"}, class: "flex items-center justify-center gap-2" do %>
                  <%= render "shared/icon/group_card_icon_add" %>
                  <p class="text-lg text-text"><%= t('groups.show.add_card') %></p>
                <% end %>
              </div>
              <p class="text-sm text-text-light font-semibold"><%= t('groups.show.cards_empty_label') %></p>
            </div>
          <% else %>
            <%= link_to new_group_card_path(@group), data: {turbo_frame: "card-create-modal", action: "click->modal#setGroupId"}, class: "flex items-center justify-center gap-2" do %>
              <%= render "shared/icon/group_card_icon_add" %>
              <p><%= t('groups.show.add_card') %></p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <%# グループ削除ボタン %>
    <div class="mt-12 pt-6">
      <%= button_to group_path(@group), method: :delete, form_class: "inline", class: "btn-danger", data: { turbo_confirm: t('groups.show.delete_confirm') } do %>
        <%= t('groups.show.delete_group') %>
      <% end %>
    </div>
  </main>
</div>

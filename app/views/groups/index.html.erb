<%= turbo_frame_tag "group-create-modal", data: { controller: "modal" }  %>

<main class="flex flex-col items-center justify-center px-8 py-12">
  <h1><%= t('.title') %></h1>
  <% if @groups.any? %>
    <div id="groups_list" class="w-full text-center space-y-4 mt-8">
      <%= render @groups %>
    </div>
  <% else %>
    <p class="text-gray-500"><%= t('groups.index.no_groups') %></p>
  <% end %>

  <!-- 右下の+ボタン（新規作成ページへのリンク） -->
  <div class="fixed bottom-22 right-6 z-50" data-controller="modal">
    <%= link_to new_group_path, data: {turbo_frame: "group-create-modal", action: "click->modal#setGroupId", modal_target: "fab"},
                class: "group bg-secondary hover:opacity-80 text-white w-14 h-14 rounded-full shadow-lg hover:shadow-xl duration-300 flex items-center justify-center relative" do %>
      <!-- +アイコン -->
      <span class="block w-6 h-[3px] bg-main-bg rounded absolute transition-all duration-300"></span>
      <span class="block w-6 h-[3px] bg-main-bg rounded absolute rotate-90 transition-all duration-300"></span>
    <% end %>
  </div>
</main>

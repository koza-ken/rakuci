<% content_for(:title, t('item_lists.show.title')) %>
<% breadcrumb :group_schedule_item_list, @group %>

<main class="flex flex-col items-center justify-center px-8 md:px-6 lg:px-8 py-6" data-controller="item-list-form sortable">
  <div class="w-full max-w-[480px] md:max-w-xl lg:max-w-2xl">
    <%# タイトル %>
    <h1 class="text-xl md:text-2xl font-bold text-text mb-6"><%= t('item_lists.show.title') %></h1>

    <%# 空状態メッセージ %>
    <div id="empty-state" class="<%= @items.any? ? 'hidden' : '' %>">
      <p class="pl-2 text-text-light mb-4"><%= t('item_lists.show.empty_message') %></p>
    </div>

    <%# アイテムリスト %>
    <div id="items-list" class="space-y-2 mb-4">
      <% if @items.any? %>
        <% @items.each do |item| %>
          <%= render partial: "shared/items/item", locals: { item: item, item_delete_path: group_schedule_item_list_item_path(@group, item) } %>
        <% end %>
      <% end %>
    </div>

    <%# 追加フォーム（最初は非表示） %>
    <div id="item-form" class="hidden mb-6" data-item-list-form-target="form">
      <%= render "shared/item_lists/item_form", item_list: @item_list, item: @item, form_url: group_schedule_item_list_items_path(@group), input_class: "flex-1" %>
    </div>

    <%# ＋ボタン %>
    <div class="flex justify-start mb-3">
      <button
        class="flex border border-dashed rounded-md px-4 py-2 w-full gap-4"
        data-action="click->item-list-form#toggleForm"
        data-item-list-form-target="addButton"
      >
        <%= render IconComponent.new(name: "group_card_icon_add", size: 6, color: "text-text") %>
        <%= t('item_lists.show.add_item_button') %>
      </button>
    </div>

    <%# 戻るボタン %>
    <div class="flex justify-center mt-20">
      <%= link_to t('item_lists.show.back_to_schedule'), group_schedule_path(@group), class: "btn-sub w-full text-center" %>
    </div>
  </div>
</main>

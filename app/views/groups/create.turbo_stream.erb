<%# フラッシュメッセージを表示 %>
<%= turbo_stream.update "flash-container", partial: "shared/flash_messages", locals: { flash: flash } %>

<%# モーダルを閉じる（中身を空にする） %>
<%= turbo_stream.update "group-create-modal", "" %>

<%# indexページのmain要素を更新（create時にturboで切り替えるため部分テンプレートで共通化） %>
<%= turbo_stream.update "groups-index-content" do %>
  <%= render "index_content" %>
<% end %>

<% content_for(:title, t('.title')) %>

<%# 作成モーダルの挿入 %>
<%= turbo_frame_tag "card-create-modal", data: { controller: "modal" } %>

<main class="flex flex-col items-center justify-center px-8 py-12">
  <h1><%= t('.title') %></h1>
  <div id="cards_list" class="w-full text-center space-y-4 mt-8">
    <%= render @cards %>
  </div>

  <%# 右下の+ボタン（新規作成ページへのリンク） %>
  <div class="fixed bottom-22 right-6 z-50" data-controller="modal">
    <%= link_to new_card_path, data: {turbo_frame: "card-create-modal", action: "click->modal#setGroupId", modal_target: "fab"},
                class: "group bg-primary hover:opacity-80 text-white w-14 h-14 rounded-full shadow-lg hover:shadow-xl duration-300 flex items-center justify-center relative" do %>
      <%# +アイコン %>
      <span class="block w-6 h-[3px] bg-text-light rounded absolute transition-all duration-300"></span>
      <span class="block w-6 h-[3px] bg-text-light rounded absolute rotate-90 transition-all duration-300"></span>
    <% end %>
  </div>
</main>

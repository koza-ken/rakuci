<main class="flex flex-col items-center justify-center px-8 py-12">
  <h1 class="text-2xl font-bold text-primary mb-8"><%= t('.title') %></h1>

  <%= form_with model: @card, class: "w-full max-w-md" do |f| %>
    <!-- エラーメッセージ表示 -->
    <% if @card.errors.any? %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <h2 class="text-sm font-semibold text-red-800 mb-2">
          <%= t('errors.messages.not_saved', count: @card.errors.count, resource: t('activerecord.models.card')) %>
        </h2>
        <ul class="list-disc list-inside text-sm text-red-700">
          <% @card.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- カード名 -->
    <div class="mb-6">
      <%= f.label :name, t('cards.form.name'), class: "block text-sm font-medium text-text mb-2" %>
      <%= f.text_field :name,
          placeholder: t('cards.form.name_placeholder'),
          class: "w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
    </div>

    <!-- メモ -->
    <div class="mb-6">
      <%= f.label :memo, t('cards.form.memo'), class: "block text-sm font-medium text-text mb-2" %>
      <%= f.text_area :memo,
          rows: 5,
          placeholder: t('cards.form.memo_placeholder'),
          class: "w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent resize-vertical" %>
    </div>

    <!-- ボタン -->
    <div class="flex gap-3">
      <%= f.submit t('cards.form.submit'), class: "btn-main flex-1" %>
      <%= link_to t('cards.form.cancel'), cards_path, class: "btn-sub flex-1 text-center" %>
    </div>
  <% end %>
</main>

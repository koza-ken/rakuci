<!-- フラッシュメッセージを表示 -->
<%= turbo_stream.update "flash-container", partial: "shared/flash_messages", locals: { flash: flash } %>

<!-- モーダルを閉じる（中身を空にする） -->
<%= turbo_stream.update "card-create-modal", "" %>

<% if @card.group_id.present? %>
  <!-- グループ詳細ページの場合 -->
  <%= turbo_stream.append "group_cards_list", partial: "cards/card", locals: { card: @card } %>
<% else %>
  <!-- ユーザーページの場合 -->
  <%= turbo_stream.append "cards_list", partial: "cards/card", locals: { card: @card } %>
<% end %>

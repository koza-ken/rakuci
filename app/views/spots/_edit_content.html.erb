<turbo-frame id="spot-edit-modal">
  <div class="relative z-20 w-full max-w-2xl max-h-screen overflow-y-auto bg-main-bg rounded-md">
    <main class="flex flex-col justify-center px-8 py-12 bg-main-bg">
      <h1 class="text-2xl font-bold text-text mb-8"><%= t('spots.edit.title') %></h1>

      <%= form_with model: @spot, url: (@card.group_card? ? group_spot_path(@spot) : user_spot_path(@spot)), local: true, class: "w-full max-w-md" do |f| %>
        <div class="mb-6">
          <%= f.label :name, class: "block text-sm font-medium text-text mb-2" do %>
            <%= t('spots.form.name') %>
            <span class="text-red-600 font-bold ml-1">*</span>
          <% end %>
          <%= f.text_field :name,
              placeholder: t('spots.form.name_placeholder'),
              class: "form-text-field" %>
          <% if @spot.errors.any? %>
            <div class="ml-2">
              <% @spot.errors.messages[:name].each do |message| %>
                <p class="text-red-600 text-xs"><%= t('activerecord.attributes.spot.name') %><%= message %></p>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="mb-6">
          <%= f.label :category_id, class: "block text-sm font-medium text-text mb-2" do %>
            <%= t('spots.form.category') %>
            <span class="text-red-600 font-bold ml-1">*</span>
          <% end %>
          <%= f.collection_select :category_id, @categories, :id, :name,
              {include_blank: "--- 選択してください ---"},
              {class: "form-text-field"} %>
          <% if @spot.errors.any? %>
            <div class="ml-2">
              <% @spot.errors.messages[:category_id].each do |message| %>
                <p class="text-red-600 text-xs"><%= t('activerecord.attributes.spot.category_id') %><%= message %></p>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="mb-6">
          <%= f.label :address, t('spots.form.address'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_field :address,
              placeholder: t('spots.form.address_placeholder'),
              class: "form-text-field" %>
        </div>

        <div class="mb-6">
          <%= f.label :website_url, t('spots.form.website_url'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_field :website_url,
              placeholder: t('spots.form.web_site_url_placeholder'),
              class: "form-text-field" %>
        </div>

        <div class="mb-6">
          <%= f.label :phone_number, t('spots.form.phone_number'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_field :phone_number,
              placeholder: t('spots.form.phone_number_placeholder'),
              class: "form-text-field" %>
        </div>

        <div class="flex gap-3">
          <%= f.submit t('spots.form.update'), class: "btn-main flex-1" %>
          <%= link_to t('cards.form.cancel'), (@card.group_card? ? group_spot_path(@spot) : user_spot_path(@spot)), class: "btn-sub flex-1 text-center" %>
        </div>
      <% end %>
    </main>
  </div>
</turbo-frame>

<%# スポット追加時に挿入される要素 %>
<div id="<%= dom_id(spot) %>" class="mb-2 lg:mb-3 flex items-center gap-2 lg:gap-3">
  <%= check_box_tag "spot_ids[]", spot.id, false, id: "spot_#{spot.id}", class: "w-4 h-4 lg:w-5 lg:h-5" %>
  <%= link_to spot.name, (@card.group_card? ? group_spot_path(spot) : user_spot_path(spot)), class: "text-text-light text-sm lg:text-base underline hover:opacity-70" %>
</div>

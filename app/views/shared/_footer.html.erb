      <%= link_to cards_path, class: "flex flex-col items-center justify-center w-1/4 h-full text-main hover:opacity-70 transition-opacity" do %>
        <%= render "shared/icon/footer_icon_card" %>
        <span class="text-xs text-secondary font-bold">カード</span>
      <% end %>

      <%= link_to groups_path, class: "flex flex-col items-center justify-center w-1/4 h-full text-main hover:opacity-70 transition-opacity" do %>
        <%= render "shared/icon/footer_icon_group" %>

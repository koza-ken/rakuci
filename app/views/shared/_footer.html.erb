      <% end %>

      <%= link_to schedules_path, class: "flex flex-col items-center justify-center w-1/4 h-full text-main hover:opacity-70 transition-opacity" do %>
        <%= render "shared/icon/footer_icon_schedule" %>
        <span class="text-xs text-secondary font-bold">しおり</span>
      <% end %>

      <%# TODO リンクを設定 %>
      <%= link_to "#", class: "flex flex-col items-center justify-center w-1/4 h-full text-main hover:opacity-70 transition-opacity" do %>

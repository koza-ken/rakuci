<%# カードガイドモーダル（groups/show と users/cards/index で共通使用） %>
<div class="fixed inset-0 z-60 bg-black/50 hidden" data-guide-target="modal">
  <div class="bg-white rounded-2xl max-w-[480px] md:max-w-lg lg:max-w-xl w-full mx-4 max-h-[90vh] overflow-y-auto p-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-bold text-text"><%= t('cards.index_content.card_guide_title') %></h2>
      <button class="text-2xl md:text-3xl text-text-light hover:text-text transition" data-action="click->guide#toggleModal">×</button>
    </div>

    <div class="space-y-6">
      <p class="md:text-lg text-text-light leading-relaxed"><%= t('cards.index_content.card_guide_description') %></p>

      <div class="flex justify-center gap-3">
        <div class="flex-1 min-w-0">
          <div class="w-full h-auto">
            <%= image_tag "card_guide_summary.svg", alt: "Card summary view", class: "rounded-lg border border-border w-full h-auto object-cover" %>
          </div>
          <p class="text-xs md:text-lg text-text-light text-center mt-2 wrap-break-word"><%= t('cards.index_content.guide_card_label') %></p>
        </div>
        <div class="flex-1 min-w-0">
          <div class="w-full h-auto">
            <%= image_tag "card_guide_detail.svg", alt: "Card detail view", class: "rounded-lg border border-border w-full h-auto object-cover" %>
          </div>
          <p class="text-xs md:text-lg text-text-light text-center mt-2 wrap-break-word"><%= t('cards.index_content.guide_spots_label') %></p>
        </div>
      </div>
    </div>

    <div class="mt-8 flex justify-center">
      <button class="btn-main px-6 py-2" data-action="click->guide#toggleModal">
        <%= t('cards.index_content.guide_close') %>
      </button>
    </div>
  </div>
</div>

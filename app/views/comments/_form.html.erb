<!-- ネストしたルーティングなのでmodelでcardも受け取る（card_comments_path(card)が生成される） -->
<%= form_with model: [card, comment], class: "mt-4" do |f| %>
  <!-- コメント投稿時のエラーメッセージ表示 -->
  <% if comment.errors.any? %>
    <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded">
      <ul class="text-sm text-red-600">
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_area :content,
      placeholder: t('comments.form.placeholder'),
      rows: 3,
      class: "form-text-field w-full" %>
  <%= f.submit t('comments.form.submit'), class: "btn-main mt-2" %>
<% end %>

<div id="like_area_<%= card.id %>" class="flex gap-2 items-center">
  <!-- メンバーっシップの取得（パーシャルに渡されたlocal_assignsかturbostreamならヘルパーメソッドで自ら取得する -->
  <% current_membership = local_assigns[:current_membership] || current_group_membership_for(card.group_id) %>

  <% if card.liked_by?(current_membership) %>
    <%= button_to card_likes_path(card), method: :delete, class: "flex items-center p-0 bg-transparent border-0 cursor-pointer hover:opacity-70", form: { onclick: "event.stopPropagation();" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="#FE6767" viewBox="0 0 24 24" stroke-width="1.5" stroke="#FE6767" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
      </svg>
    <% end %>
  <% else %>
    <%= button_to card_likes_path(card), method: :post, class: "flex items-center p-0 bg-transparent border-0 cursor-pointer hover:opacity-70", form: { onclick: "event.stopPropagation();" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
      </svg>
    <% end %>
  <% end %>
  <p><%= card.likes.count %></p>
</div>

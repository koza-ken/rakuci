<div class="min-h-screen bg-main-bg">
  <main class="flex flex-col items-center justify-center px-8 py-12">
    <div class="w-full max-w-md">
      <h2 class="text-2xl font-bold text-text text-center mb-8"><%= t('.title') %></h2>

      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), method: :patch, local: true do |f| %>
        <%# OAuth認証情報の表示 %>
        <% if resource.oauth_user? %>
          <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-md">
            <div class="flex items-center gap-2 text-sm text-blue-800">
              <svg class="w-5 h-5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
              <span class="font-medium">Googleアカウントでログイン中</span>
            </div>
          </div>
        <% end %>

        <%# ユーザー名 %>
        <div class="mb-6">
          <%= f.label :display_name, t('.display_name'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_field :display_name, autofocus: true, autocomplete: "name", maxlength: 20, class: "form-text-field #{'border-red-500' if resource.errors[:display_name].any?}" %>
          <% resource.errors.full_messages_for(:display_name).each do |message| %>
            <p class="text-sm text-red-600 mt-1"><%= message %></p>
          <% end %>
        </div>

        <%# メールアドレス %>
        <% if resource.oauth_user? %>
          <%# Google認証ユーザー：メールアドレスは表示のみ %>
          <div class="mb-6">
            <%= f.label :email, t('.email'), class: "block text-sm font-medium text-text mb-2" %>
            <div class="form-text-field bg-gray-100 text-gray-600 cursor-not-allowed">
              <%= resource.email %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Googleアカウントのメールアドレスは変更できません</p>
          </div>
        <% else %>
          <%# 通常ユーザー：メールアドレス変更可能 %>
          <div class="mb-6">
            <%= f.label :email, t('.email'), class: "block text-sm font-medium text-text mb-2" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-text-field #{'border-red-500' if resource.errors[:email].any?}" %>
            <% resource.errors.full_messages_for(:email).each do |message| %>
              <p class="text-sm text-red-600 mt-1"><%= message %></p>
            <% end %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="mb-6 p-3 bg-yellow-50 border border-yellow-200 rounded-md text-sm text-yellow-800">
              確認待ち: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <%# 現在のパスワード（メールアドレス変更時のみ必要） %>
          <div class="mb-2">
            <%= f.label :current_password, class: "block text-sm font-medium text-text mb-2" do %>
              <%= t('.current_password') %>
              <span class="text-xs text-gray-500 font-normal">（メールアドレス変更時のみ必要）</span>
            <% end %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-text-field #{'border-red-500' if resource.errors[:current_password].any?}" %>
            <% resource.errors.full_messages_for(:current_password).each do |message| %>
              <p class="text-sm text-red-600 mt-1"><%= message %></p>
            <% end %>
          </div>
        <% end %>

        <%# 更新ボタンと戻るボタン %>
        <div class="mt-10 mb-6 flex gap-4">
          <%= f.submit t('.submit'), class: "flex-1 btn-main" %>
          <%= link_to t('.back'), :back, class: "flex-1 btn-sub text-center" %>
        </div>
      <% end %>

      <%# パスワード変更リンク %>
      <%# TODO パスワードリセット実装後にリンク設定 %>
      <div class="mb-6 mt-12">
        <%= link_to "#", class: "block w-full text-center py-3 px-4 border-2 border-secondary text-secondary rounded-md hover:bg-secondary hover:text-white transition-colors font-medium" do %>
          パスワードを変更する
        <% end %>
      </div>

      <%# アカウント削除 %>
      <div class="mt-14 pt-6 border-t border-gray-200">
        <%= button_to t('.cancel_account'),
            registration_path(resource_name),
            method: :delete,
            data: { confirm: t('.cancel_confirmation'), turbo_confirm: t('.cancel_confirmation') },
            class: "w-full py-3 px-4 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors" %>
      </div>
    </div>
  </main>
</div>

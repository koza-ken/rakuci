<div class="min-h-screen bg-main-bg">
  <main class="flex flex-col items-center justify-center px-8 py-12">
    <%# <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8"> %>
    <div class="w-full max-w-md">
      <h2 class="text-xl font-bold text-text text-center mb-8"><%= t('.title') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%# メールアドレス %>
        <div class="mb-6">
          <%= f.label :email, t('.email'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-text-field" %>
          <% if resource.errors[:email].any? %>
            <% resource.errors[:email]&.each do |message| %>
              <p class="text-red-600 text-xs mt-1 ml-1"><%= t('devise.registrations.new.email') %><%= message %></p>
            <% end %>
          <% end %>
        </div>

        <%# パスワード %>
        <div class="mb-6">
          <%= f.label :password, t('.password'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "form-text-field" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-400 ml-1"><%= t('.password_hint', count: @minimum_password_length) %></span>
          <% end %>
          <% if resource.errors[:password].any? %>
            <% resource.errors[:password]&.each do |message| %>
              <p class="text-red-600 text-xs mt-1 ml-1"><%= t('devise.registrations.new.password') %><%= message %></p>
            <% end %>
          <% end %>
        </div>

        <%# パスワード確認 %>
        <div class="mb-6">
          <%= f.label :password_confirmation, t('.password_confirmation'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "form-text-field" %>
          <% if resource.errors[:password_confirmation].any? %>
            <% resource.errors[:password_confirmation]&.each do |message| %>
              <p class="text-red-600 text-xs mt-1 ml-1"><%= t('devise.registrations.new.password_confirmation') %><%= message %></p>
            <% end %>
          <% end %>
        </div>

        <%# 利用規約とプライバシーポリシーへの同意 %>
        <div class="mb-6 text-sm text-text text-center">
          <%= link_to t('.terms_of_service'), terms_path, class: "text-secondary font-bold underline hover:opacity-80" %>と<%= link_to t('.privacy_policy'), privacy_path, class: "text-secondary font-bold underline hover:opacity-80" %><br>
          <%= t('.terms_agreement') %>
        </div>

        <%# 登録ボタン %>
        <div class="mb-10 text-center">
          <%= f.submit t('.sign_up'), class: "btn-main md:w-1/2" %>
        </div>
      <% end %>

      <%# 区切り線と「または」 %>
      <div class="flex items-center mb-8">
        <div class="flex-1 border-t border-gray-300"></div>
        <div class="px-4 text-sm text-gray-500"><%= t('devise.sessions.new.or') %></div>
        <div class="flex-1 border-t border-gray-300"></div>
      </div>

      <%# Googleログインボタン %>
      <div class="mb-14">
        <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full md:w-1/2 md:mx-auto flex items-center justify-center gap-3 btn-sub" do %>
          <%= render IconComponent.new(name: "google_icon", size: 5, color: "text-text-light") %>
          <%= t('.google_login') %>
        <% end %>
      </div>

      <%# ログインページへのボタン %>
      <div class="text-center">
        <%= link_to t('.sign_in'), new_session_path(resource_name), class: "inline-block btn-sub w-full md:w-1/2" %>
      </div>
    </div>
  </main>
</div>

<div class="min-h-screen bg-main-bg">
  <main class="flex flex-col items-center justify-center px-8 py-12">
    <%# <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8"> %>
    <div class="w-full max-w-md">
      <h2 class="text-2xl font-bold text-text text-center mb-8"><%= t('.title') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%# メールアドレス %>
        <div class="mb-6">
          <%= f.label :email, t('.email'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-text-field" %>
          <% if resource.errors[:email].any? %>
            <% resource.errors[:email]&.each do |message| %>
              <p class="text-red-600 text-xs mt-1 ml-1"><%= t('devise.registrations.new.email') %><%= message %></p>
            <% end %>
          <% end %>
        </div>

        <%# パスワード %>
        <div class="mb-6">
          <%= f.label :password, t('.password'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-2 bg-white  border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-400 ml-1"><%= t('.password_hint', count: @minimum_password_length) %></span>
          <% end %>
          <% if resource.errors[:password].any? %>
            <% resource.errors[:password]&.each do |message| %>
              <p class="text-red-600 text-xs mt-1 ml-1"><%= t('devise.registrations.new.password') %><%= message %></p>
            <% end %>
          <% end %>
        </div>

        <%# パスワード確認 %>
        <div class="mb-12">
          <%= f.label :password_confirmation, t('.password_confirmation'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-2 bg-white  border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
          <% if resource.errors[:password_confirmation].any? %>
            <% resource.errors[:password_confirmation]&.each do |message| %>
              <p class="text-red-600 text-xs mt-1 ml-1"><%= t('devise.registrations.new.password_confirmation') %><%= message %></p>
            <% end %>
          <% end %>
        </div>

        <%# 登録ボタン %>
        <div class="mb-10">
          <%= f.submit t('.sign_up'), class: "btn-main" %>
        </div>
      <% end %>


      <%# Googleログインボタン (GET でリクエストフェーズを叩き、CSRF エラーを回避) %>
      <div class="mb-14">
        <%= link_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "w-full flex items-center justify-center gap-3 btn-sub" do %>
          <svg class="w-5 h-5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          <%= t('.google_login') %>
        <% end %>
      </div>

      <%# ログインページへのボタン %>
      <div class="text-center">
        <%= link_to t('.sign_in'), new_session_path(resource_name), class: "inline-block btn-sub" %>
      </div>
    </div>
  </main>
</div>

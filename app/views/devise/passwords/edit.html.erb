<div class="min-h-screen bg-main-bg">
  <main class="flex flex-col items-center justify-center px-8 py-12">
    <div class="w-full max-w-md">
      <h2 class="text-xl font-bold text-text text-center mb-8"><%= t('.title') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <%# 新しいパスワード %>
        <div class="mb-8">
          <%= f.label :password, t('.password'), class: "block text-sm font-medium text-text mb-2" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-text-light mb-2"><%= t('devise.passwords.edit.minimum_password_length', count: @minimum_password_length) %></p>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
              class: "form-text-field" %>
        </div>

        <%# パスワード確認 %>
        <div class="mb-8">
          <%= f.label :password_confirmation, t('.password_confirmation'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "form-text-field" %>
        </div>

        <%# 送信ボタン %>
        <div class="mb-12">
          <%= f.submit t('.submit'), class: "btn-main",
              data: { turbo_confirm: t('.change_password_confirmation') } %>
        </div>
      <% end %>

      <%# ログインページへのリンク %>
      <div class="text-center text-text">
        <%= link_to t('.sign_in'), new_session_path(resource_name), class: "inline-block btn-sub" %>
      </div>
    </div>
  </main>
</div>

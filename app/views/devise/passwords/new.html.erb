<div class="min-h-screen bg-main-bg">
  <main class="flex flex-col items-center justify-center px-8 py-12">
    <div class="w-full max-w-md">
      <h2 class="text-xl font-bold text-text text-center mb-8"><%= t('.title') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%# メールアドレス %>
        <div class="mb-8">
          <%= f.label :email, t('.email'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-text-field" %>
        </div>

        <%# 送信ボタン %>
        <div class="mb-12 md:mb-20 md:text-center">
          <%= f.submit t('.submit'), class: "btn-main",
              data: { turbo_confirm: t('.send_instructions_confirmation') } %>
        </div>
      <% end %>

      <%# ログインページへのリンク %>
      <div class="text-center text-text">
        <%= link_to t('.sign_in'), new_session_path(resource_name), class: "inline-block btn-sub" %>
      </div>
    </div>
  </main>
</div>

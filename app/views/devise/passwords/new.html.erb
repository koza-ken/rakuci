<div class="min-h-screen bg-main-bg">
  <%= render "shared/header" %>

  <main class="flex flex-col items-center justify-center px-8 py-12">
    <div class="w-full max-w-md">
      <h2 class="text-2xl font-bold text-text text-center mb-8"><%= t('.title') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- メールアドレス -->
        <div class="mb-6">
          <%= f.label :email, t('.email'), class: "block text-sm font-medium text-text mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
        </div>

        <!-- 送信ボタン -->
        <div class="mb-6">
          <%= f.submit t('.submit'), class: "btn-main" %>
        </div>
      <% end %>

      <!-- ログインページへのリンク -->
      <div class="text-center text-text">
        <%= link_to t('.sign_in'), new_session_path(resource_name), class: "inline-block px-8 py-3 bg-white border-2 border-gray-300 text-text font-semibold rounded-lg hover:bg-gray-50 transition" %>
      </div>
    </div>
  </main>
</div>
